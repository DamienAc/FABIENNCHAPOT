<section class="reassurance">
    <div class="wrapper">
        <ul>
            {% for block in section.blocks %}
                <li>
                    {% if block.settings.url %}
                    <a href="{{ block.settings.url }}">
                    {% endif %}
                        {% render 'lazy-img' with src: block.settings.icon %}
                        <p>{{ block.settings.text }}</p>
                    {% if block.settings.url %}
                    </a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
</section>

